<body>
  <div class="container">
      <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
          <div class="card card-signin flex-row my-5">
            <div class="card-img-left d-none d-md-flex">
            </div>
            <div class="card-body">
              <% @company.errors.full_messages.each do |message|%>
               <ul>
                <ol class="text-center alert-danger"><%= message%></ol>
              </ul>
              <%end%>
              <h5 class="card-title text-center text-light bg-dark">New Company</h5>
              <%= form_with model: @company, local: true do |f|%>
                <div class="form-label-group">
                    <%= f.label :name%>
                    <%= f.text_field :name, class: "form-control"%>
                </div>

                <div class="form-label-group">
                    <%= f.label :corporate_name %>
                    <%= f.text_field :corporate_name, class: "form-control" %>
                </div>

                <div class="form-label-group">
                    <%= f.label :cnpj %>
                    <%= f.text_field :cnpj, class: "form-control" %>
                </div>

                <div class="form-label-group">
                    <%= f.label :address %>
                    <%= f.text_field :address, class: "form-control" %>
                </div>

                <div class="form-label-group">
                    <%= f.label :domain%>
                    <%= f.text_field :domain, class: "form-control"%>  
                </div>
                
                <div class="form-label-group actions">
                    <%= f.submit class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                  </div>
              <% end %>
            </div>
            </div>
        </div>
  </div>     
</body>
